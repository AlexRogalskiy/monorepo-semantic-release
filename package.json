{
  "name": "release",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prebuild": "run-s lint clean",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn precommit"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€” staged"
    ],
    "src/**/*.ts": [
      "tslint -c tslint.json -p ./tsconfig.json --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": "https://github.com/bubkoo/monorepo-semantic-release",
  "author": "bubkoo <bubkoo.wy@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "bash-glob": "^2.0.0",
    "bash-path": "^2.0.1",
    "blork": "^9.2.2",
    "debug": "^4.2.0",
    "detect-indent": "^6.0.0",
    "detect-newline": "^3.1.0",
    "get-stream": "^6.0.0",
    "git-log-parser": "^1.2.0",
    "lodash.identity": "^3.0.0",
    "promise-events": "^0.2.0",
    "semantic-release": "^17.2.2",
    "signale": "^1.4.0",
    "stream-buffers": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/bash-glob": "^2.0.0",
    "@types/debug": "^4.1.5",
    "@types/lodash.identity": "^3.0.6",
    "@types/node": "^14.0.27",
    "@types/semantic-release": "^17.2.0",
    "@types/signale": "^1.4.1",
    "@types/stream-buffers": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "multi-semantic-release": "^2.4.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.0.3"
  }
}
