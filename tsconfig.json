{
  "exclude": [
      "node_modules",
      "**/es",
      "**/lib"
  ],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "target": "es5",
    "outDir": "./lib",
    "lib": [
      "dom",
      "es2015"
    ]
  }
}
